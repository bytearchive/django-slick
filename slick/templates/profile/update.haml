- extends "base.html"
- load bootstrap3

- block page-heading-title
    Edit Profile :: {{object|truncatechars:100}}


- block content
  .row
    .col-sm-12
      .panel
        .panel-heading
            %h3.panel-title
                Details
        .panel-body
            .padding-15
                %form{:action => "", :method => "post"}
                    - csrf_token    
                    {% bootstrap_form form %}
                    .form-actions
                        %input.btn.btn-primary{:type => "submit", :value => "Update Details"}

