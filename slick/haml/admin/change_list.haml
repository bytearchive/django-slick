- extends "admin/base.html"
- load admin_list i18n admin_urls

- block javascripts
	{{ block.super }}
	:javascript
        (function($) {
            $(document).ready(function() {
                slick.initFilter();
            });
        })(slk.jQuery);

- block breadcrumbs
	- if not is_popup
		%li
			%a{:href => "{% url 'admin:app_list' app_label=cl.opts.app_label %}"}
				- trans app_label|capfirst|escape
		%li
			%a{:href => "{% url 'admin:app_list' app_label=cl.opts.app_label %}"} 
				{{ cl.opts.verbose_name_plural|capfirst }}

- block page_title
	%li
		{{ title|capfirst }}

- block object-tools

- block content
	.row
		- block result_list
			.col-md-12
				{% if action_form and actions_on_top and cl.show_admin_actions %}{% admin_actions %}{% endif %}
				.panel
					.panel-heading

					.panel-body
						.row
							.col-lg-6
								.input-group
									.input-group-btn
										- if cl.has_filters
											%button.btn.btn-default.dropdown-toggle{:data-toggle => "dropdown"}
												{% trans 'Filter' %}
												%span.caret
											%ul.dropdown-menu.dropdown-menu-form
											  {% for spec in cl.filter_specs %}
											  	{% admin_list_filter cl spec %}
											  {% endfor %}
											  
									- block search
										- search_form cl
						
						- result_list cl
					
					{% if action_form and actions_on_bottom and cl.show_admin_actions %}{% admin_actions %}{% endif %}
