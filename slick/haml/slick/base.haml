- load static slick_tags
!!!
%html{lang: "{{LANGUAGE_CODE}}"}
  %head

    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "", name: "description"}
    %meta{content: "", name: "author"}
    %title Admin
    - block stylesheets
      %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700", rel: "stylesheet"}
      %link{href: "{% static 'slick/plugins/bootstrap-select-1.6.3/css/bootstrap-select.min.css' %}", rel: "stylesheet"}
      %link{href: "{% static 'slick/css/slick.css' %}", rel: "stylesheet"}
    - block javascripts
      :javascript
        var slick = {};
      %script{src: "{% static 'slick/plugins/jquery-1.9.1/jquery-1.9.1.min.js' %}"}
      %script{src: "{% static 'slick/plugins/html5sortable/html.sortable.min.js' %}"}
      %script{src: "{% static 'slick/plugins/jquery-cookie-1.4.1/jquery.cookie.js' %}"}
      %script{src: "{% static 'slick/plugins/bootstrap-3.3.0/js/bootstrap.min.js' %}"}
      %script{src: "{% static 'slick/plugins/jquery-slimscroll-1.3.0/jquery.slimscroll.min.js' %}"}
      %script{src: "{% static 'slick/plugins/bootstrap-select-1.6.3/js/bootstrap-select.min.js' %}"}
      %script{src: "{% static 'slick/plugins/bootstrap3-dialog/js/bootstrap-dialog.js' %}"}
      %script{src: "{% static 'slick/js/slick.js' %}"}
      %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.3.8/angular.min.js"}
      %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.3.8/angular-resource.min.js"}
      %script{src: "https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.13/angular-ui-router.min.js"}
      %script{src: "https://cdnjs.cloudflare.com/ajax/libs/angular-formly/1.0.0/formly.min.js"}
      %script{src: "{% static 'slick/js/angular-formly-templates-bootstrap.min.js' %}"}

      :javascript
        STATIC_URL = "{{ STATIC_URL|escapejs  }}";

        (function($) {
          $(document).ready(function() {
            //slick.init();
            //slick.initSidebar();
          });
        })(slk.jQuery);
    
    - block extrahead

  %body{:ng-app => "slick"}
    #page-container
      
      - if not is_popup
        #header.header.navbar.navbar-default.navbar-fixed-top
          .container-fluid
            .navbar-header
              - block branding
                %a.navbar-brand{}
                  - block admin_title
                    - slick_admin_title

              %button.navbar-toggle{:data-click => "sidebar-toggle", :type => "button"}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
             
           - block object-tools
            .nav.navbar-nav.navbar-right
              %ul.list-inline
                - block object-tools-items

        #sidebar.sidebar
          %div{data-scrollbar: "true", data-height: "100%"}
            - include "slick/partials/sidebar.html"
      
      #content.content

        - block messages
          - if messages
            
              - for message in messages
                .note{:class => "{% if message.tags %}note-{{ message.tags }}{% endif %}"}
                  {{ message }}

        %ul#breadcrumbs.list-inline.pull-right
          - block breadcrumbs
          - if title
            %li
              {{ title|capfirst }}

        %h1.content-title
          - block content_title
            - if title
              {{ title }}

        <div ui-view></div>
        - block content
            
    

    %script{src: "{% static 'slick/js/angular.js' %}"}
    - block footer
